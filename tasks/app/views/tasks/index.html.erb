<p id="notice"><%= notice %></p>

<h2>Current role: <%= current_parrot.role %></h2>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Asignee</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.assignee&.name || 'Not Sync Parrot' %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_parrot.manager? || current_parrot.admin? %>
  <%= link_to 'MANAGER: SHUFFLE TASKS', shuffle_tasks_path %> |
<% end %>

<%= link_to 'New Task', new_task_path %>
